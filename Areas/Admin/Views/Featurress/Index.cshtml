@using FinalArizon.Models;

@model List<Feature>
@{
    int count = 1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                <a asp-controller="Featurress" asp-action="Create" type="button" class="btn btn-primary btn-lg">Create</a>
            </p>
            <div class="table-responsive w-75">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Count
                            </th>
                            <th>
                                AboutProduct
                            </th>
                            <Th>
                                BrandName
                            </Th>

                            <th>
                                ModelName
                            </th>
                            <th>
                                Vol
                            </th>
                            <th>
                                Tension
                            </th>
                            <th>
                                Size
                            </th>
                            <th>
                                Weight
                            </th>
                            <th>
                                ProductId
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class="">
                                <td>
                                    @count
                                </td>

                                <td class="py-1">
                                   @item.AboutProduct
                                </td>
                                <td class="py-1">
                                  @item.BrandName
                                </td>
                                <td>
                                    @item.ModelName
                                </td>
                                <td>
                                    @item.Vol
                                </td>
                                <td>
                                    @item.Tension
                                </td>
                                <td>
                                    @item.Size
                                </td>
                                <td>
                                    @item.Weight
                                </td>
                                <td>
                                    @item.ProductId
                                </td>
                                <td>
                                    <a asp-route-id="@item.Id" asp-controller="Featurress" asp-action="Update" type="button" class="btn btn-primary"><i class="bi bi-hand-index-thumb"></i></a>
                                    <a asp-route-id="@item.Id" asp-action="Delete" type="button" class="btn btn-secondary"><i class="bi bi-trash3-fill"></i></a>

                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
