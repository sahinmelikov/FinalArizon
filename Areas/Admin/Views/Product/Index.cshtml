@using FinalArizon.Models;

@model List<Product>
@{
    int count=1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                <a asp-controller="Product" asp-action="Create" type="button" class="btn btn-primary btn-lg">Create</a>
            </p>
            <div class="table-responsive w-75">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                            Count
                            </th>
                            <th>
                                ProductImage
                            </th>
                            <th>
                                ColorImage
                            </th>
                        <Th>
                            Product Name
                        </Th>
                        
                            <th>
                               Product Description
                            </th>
                            <th>
                               Product Price
                            </th>
                            <th>
                                Product DiscountPrice
                            </th>
                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                                 <tr class="">
                                     <td>
                                         @count
                                     </td>

                                <td class="py-1">
                                    <img src="~/RootAllPictures/img/@item.ImagePath" alt="image">
                                </td>
                              
                                <td class="py-1">
                                    <img src="~/RootAllPictures/img/@item.ProductİmageColor" alt="image">
                                </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                             @item.Price
                            </td>
                            <td>
                               @item.DiscountPrice
                            </td>
                            <td>
                                    <a asp-route-id="@item.Id" asp-controller="Product" asp-action="Update" type="button" class="btn btn-primary"><i class="bi bi-hand-index-thumb"></i></a>
                                    <a asp-route-id="@item.Id" asp-action="Delete" type="button" class="btn btn-secondary"><i class="bi bi-trash3-fill"></i></a>
                                    
                            </td>
                        </tr>
                        count ++;
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>