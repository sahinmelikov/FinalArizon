@using FinalArizon.ViewModel;
@model ModelCreateViewModel

<div class="card-body">
    <form class="forms-sample" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="ParentsCategoryId"></label>
            <select asp-for="ParentsCategoryId" class="form-control">
                <option value="">Seçiniz</option>
                @if (ViewBag.Products != null)
                {
                    foreach (var product in ViewBag.Products)
                    {
                        <option value="@product.Value">@product.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="ParentsCategoryId"></span>
        </div>


        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <button asp-controller="Model" asp-action="Index" class="btn btn-light">Cancel</button>
    </form>
</div>
        
